{% extends 'base.html.twig' %}

{% block title %}Measurement index{% endblock %}

{% block body %}
    <h1>Measurement index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>City</th>
                <th>Date</th>
                <th>Celsius</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for measurement in measurements %}
            <tr>
                <td>{{ measurement.id }}</td>
                <td>{{ measurement.location.city }}</td>
                <td>{{ measurement.date ? measurement.date|date('d-m-y h:s') : '' }}</td>
                <td>{{ measurement.celsius }}</td>
                <td>
                
{%if is_granted('ROLE_MEASUREMENT_SHOW') %}
                    <a href="{{ path('app_measurement_show', {'id': measurement.id}) }}">show</a>
{% endif %}
{%if is_granted('ROLE_MEASUREMENT_EDIT') %}
                    <a href="{{ path('app_measurement_edit', {'id': measurement.id}) }}">edit</a>
{% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{%if is_granted('ROLE_MEASUREMENT_NEW') %}
    <a href="{{ path('app_measurement_new') }}"> <button class="btn btn-secondary">create new</button>
{% endif %}
</a>
{% endblock %}
